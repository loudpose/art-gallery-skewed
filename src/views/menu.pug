mixin image(src, title, instagram, web)
	.menu__item 
		a.menu__item__image--link(href=instagram)
			img(src=src, alt=title)
		.menu__item__link 
			a(href=instagram).menu__item__link--text=title 
			.gallery__item__socials 
				if (instagram)
					a(href=instagram).gallery__item__socials__link
						img(src="./img/instagram.svg", alt="Instagram").gallery__item__socials__icon
				if (web)
					a(href=web).gallery__item__socials__link
						img(src="./img/web.svg", alt="Website").gallery__item__socials__icon

